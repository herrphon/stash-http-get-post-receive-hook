  <!-- import from the product container -->
  <component-import key="applicationProperties" interface="com.atlassian.sal.api.ApplicationProperties"/>
  <repository-hook name="Http Get Post Receive Hook" i18n-name-key="http-get-post-receive-hook.name" key="http-get-post-receive-hook" class="de.aeffle.stash.plugin.hook.HttpGetPostReceiveHook">
    <description key="http-get-post-receive-hook.description">The Http Get Post Receive Hook Plugin</description>
    <icon>icon-example.png</icon>
    <config-form name="Http Get Post Receive Hook Config" key="http-get-post-receive-hook-config">
      <view>de.aeffle.stash.plugin.hook.configuration</view>
      <directory location="/static/"/>
    </config-form>
  </repository-hook>
